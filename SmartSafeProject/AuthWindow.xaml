<Window x:Class="SmartSafeProject.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartSafeProject"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Авторизация" Height="175" Width="250">
    <Border Padding="16">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordTextBox" PasswordChar="•"/>
            <Button x:Name="AuthButton"
                    Content="Войти"
                    Click="AuthButton_Click"
                    Margin="0 16 0 0"
                    MinHeight="36"
                    Width="200"/>
        </StackPanel>
    </Border>
</Window>
